<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.lailai.android.badapple.livepaper"
    android:versionCode="5"
    android:versionName="1.1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />
    <uses-feature android:name="android.software.live_wallpaper"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">
        <service android:permission="android.permission.BIND_WALLPAPER" android:name="BadAppleLiveWallpaper" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data android:resource="@xml/wallpaper" android:name="android.service.wallpaper"/>
        </service>
        <activity android:name=".BadAppleLiveWallpaperSetting" android:theme="@android:style/Theme.Light.WallpaperSettings" android:label="@string/settings" android:exported="true"></activity>
    </application>

</manifest>
